[Unit]
Description=<%= name %>

[Service]
ExecStart=/bin/bash start.sh <%= nodeVersion %> <%= mitosis.mode %> %i
# Required on some systems
WorkingDirectory=<%= cwd %>
Restart=always
RestartSec=0
# Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=<%= name %>
User=node
Group=node

[Install]
WantedBy=multi-user.target
