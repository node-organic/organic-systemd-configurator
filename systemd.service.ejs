[Unit]
Description=<%= name %>

[Service]
ExecStart=. /home/node/.nvm/nvm.sh && nvm use <%= nodeVersion %> && node index.js <%= mitosis.mode %> %i
# Required on some systems
WorkingDirectory=<%= cwd %>
Restart=always
RestartSec=0
# Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=<%= name %>
User=node
Group=node

[Install]
WantedBy=multi-user.target
